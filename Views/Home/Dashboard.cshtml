@model MantenimientoIndustrial.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h1>Dashboard de Mantenimiento</h1>

    <!-- Tarjetas de Resumen -->
    <div class="container mt-4">
        <div class="row text-center g-4">
            <!-- Total Equipos -->
            <div class="col-md-3">
                <div class="card shadow-lg border-0 bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Total Equipos</h4>
                            <i class="bi bi-tools display-4"></i>
                        </div>
                        <p class="display-4 fw-bold mt-3">@Model.TotalEquipos</p>
                    </div>
                </div>
            </div>

            <!-- Total Mantenimientos -->
            <div class="col-md-3">
                <div class="card shadow-lg border-0 bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Total Mantenimientos</h4>
                            <i class="bi bi-calendar-check display-4"></i>
                        </div>
                        <p class="display-4 fw-bold mt-3">@Model.TotalMantenimientos</p>
                    </div>
                </div>
            </div>

            <!-- Mantenimientos Pendientes -->
            <div class="col-md-3">
                <div class="card shadow-lg border-0 bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Mant. Pendientes</h4>
                            <i class="bi bi-hourglass-split display-4"></i>
                        </div>
                        <p class="display-4 fw-bold mt-3">@Model.MantenimientosPendientes</p>
                    </div>
                </div>
            </div>

            <!-- Alertas Activas -->
            <div class="col-md-3">
                <div class="card shadow-lg border-0 bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Alertas Activas</h4>
                            <i class="bi bi-exclamation-triangle display-4"></i>
                        </div>
                        <p class="display-4 fw-bold mt-3">@Model.AlertasActivas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>