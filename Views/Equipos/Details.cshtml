@model MantenimientoIndustrial.Models.Equipo

@{
    ViewData["Title"] = "Informacion del Equipo";
}

<h1>Informacion del Equipo</h1>

<div>
    <h4>Equipo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-3" >
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FotoRuta))
            {
                <img src="@Model.FotoRuta" class="img-thumbnail" style="max-width: 200px;" />
            }
            else
            {
                <p>No se ha cargado una foto.</p>
            }
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Ubicacion)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Ubicacion)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>

<h2>Componentes Asociados</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Estado</th>
            <th>Observaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var componente in Model.Componentes)
        {
            <tr>
                <td>@componente.Nombre</td>
                <td>@componente.Cantidad</td>
                <td>@componente.Estado</td>
                <td>@componente.Observaciones</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EquipoID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <!-- Scripts específicos de la vista -->
}